@model PTOModel

@{
    ViewData["Title"] = "PTO";
}

<div class="container-fluid">
    <form id="empForm" class="row g-3 needs-validation">
        <div class="col-md-4">
            <label for="LeaveBalance" class="form-label">PTO Balance</label>
            <input type="text" class="form-control" id="LeaveBalance" name="LeaveBalance" value="@Model.LeaveBalance" readonly style="background-color:lightgray" />
        </div>
        <div class="col-md-4">
            <label for="PTOTypeID" class="form-label">PTO Type</label>
            <select id="PTOTypeID" class="form-select" name="PTOTypeID">
                <option selected>Choose...</option>
                <option>...</option>
            </select>
        </div>
        <div class="col-md-4">
            <label for="ManagerID" class="form-label">Manager</label>
            <input type="text" class="form-control" id="txtManager" name="txtManager" value="@Model.ManagerName" readonly style="background-color:lightgray" />
        </div>
        <div class="col-md-6">
            <label for="NumDays" class="form-label">Number of Days</label>
            <input type="number" class="form-control" id="NumDays" name="NumDays" required>
        </div>
        <div class="col-md-6">
            <label for="Reason" class="form-label">Reason</label>
            <input type="text" class="form-control" id="Reason" name="Reason" />
        </div>
        <div class="col-12 align-content-center">
            <button type="button" id="btnApplyPTO" class="btn btn-primary"><i class="bi bi-floppy"></i>&nbsp;&nbsp;Apply</button>
        </div>
    </form>
</div>