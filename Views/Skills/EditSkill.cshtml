@model RoleModel

@{
    ViewData["Title"] = "Edit Role";
}

<div class="container-fluid">
    <form id="frmEditRole" class="row g-3">
        <div class="col-md-6">
            <label for="RoleID" class="form-label">Role ID</label>
            <input type="text" class="form-control" id="RoleID" value="@Model.RoleID" readonly style="background-color:lightgray" />
        </div>
        <div class="col-md-6">
            <label for="RoleName" class="form-label">Role Name</label>
            <input type="text" class="form-control" id="RoleName" value="@Model.RoleName" required />
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="col-12 align-content-center">
            <button type="button" id="btnSaveExistingRole" class="btn btn-primary"><i class="bi bi-floppy"></i>&nbsp;&nbsp;Save</button>
        </div>
    </form>
</div>